{
  "name": "sachain-infrastructure",
  "version": "0.1.0",
  "bin": {
    "sachain-infrastructure": "bin/sachain-infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:integration": "RUN_INTEGRATION_TESTS=true jest --testNamePattern=\"Deployed Resource Validation\"",
    "test:deployment": "jest --testPathPattern=deployment-validation",
    "cdk": "cdk",
    "deploy": "npm run build && cdk deploy",
    "deploy:dev": "npm run build && cdk deploy --context environment=dev",
    "deploy:staging": "npm run build && cdk deploy --context environment=staging",
    "deploy:prod": "npm run build && cdk deploy --context environment=prod",
    "deploy:script": "./scripts/deploy.sh",
    "deploy:script:dev": "./scripts/deploy.sh dev",
    "deploy:script:staging": "./scripts/deploy.sh staging",
    "deploy:script:prod": "./scripts/deploy.sh prod",
    "synth": "npm run build && cdk synth",
    "synth:dev": "npm run build && cdk synth --context environment=dev",
    "synth:staging": "npm run build && cdk synth --context environment=staging",
    "synth:prod": "npm run build && cdk synth --context environment=prod",
    "diff": "npm run build && cdk diff",
    "diff:dev": "npm run build && cdk diff --context environment=dev",
    "diff:staging": "npm run build && cdk diff --context environment=staging",
    "diff:prod": "npm run build && cdk diff --context environment=prod",
    "validate": "npm run build && npm run test:deployment",
    "validate:deployment": "./scripts/validate-deployment.sh",
    "validate:deployment:dev": "./scripts/validate-deployment.sh dev",
    "validate:deployment:staging": "./scripts/validate-deployment.sh staging",
    "validate:deployment:prod": "./scripts/validate-deployment.sh prod",
    "test:security": "./scripts/security-performance-tests.sh",
    "test:security:dev": "./scripts/security-performance-tests.sh dev",
    "test:security:staging": "./scripts/security-performance-tests.sh staging",
    "test:security:prod": "./scripts/security-performance-tests.sh prod",
    "test:e2e": "./scripts/e2e-validation.sh",
    "test:e2e:dev": "./scripts/e2e-validation.sh dev",
    "test:e2e:staging": "./scripts/e2e-validation.sh staging",
    "test:e2e:prod": "./scripts/e2e-validation.sh prod",
    "bootstrap": "cdk bootstrap",
    "bootstrap:dev": "cdk bootstrap --context environment=dev",
    "bootstrap:staging": "cdk bootstrap --context environment=staging",
    "bootstrap:prod": "cdk bootstrap --context environment=prod"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1019.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.201.0",
    "constructs": "^10.0.0"
  }
}